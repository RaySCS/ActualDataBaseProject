<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hardwoodfloor"
    tools:context=".DisplayPlayerPage">


    <Button
        android:id="@+id/button6"
        android:layout_width="148dp"
        android:layout_height="129dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/backarrow"
        android:onClick="homePage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollPlayersView"
        app:layout_constraintVertical_bias="0.997" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:onClick="openAddPlayerActivity"
        android:text="ADD PLAYER"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/scrollPlayersView"
        android:layout_width="414dp"
        android:layout_height="254dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="104dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMinutes"
        android:layout_width="177dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="37dp"
        android:text="MINUTES"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollPlayersView" />

    <TextView
        android:id="@+id/textViewPoints"
        android:layout_width="153dp"
        android:layout_height="48dp"
        android:layout_marginStart="368dp"
        android:layout_marginLeft="368dp"
        android:layout_marginTop="36dp"
        android:text="POINTS"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollPlayersView" />

    <TextView
        android:id="@+id/textViewAssists"
        android:layout_width="153dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="212dp"
        android:text="ASSISTS"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollPlayersView" />

    <TextView
        android:id="@+id/textViewRebounds"
        android:layout_width="195dp"
        android:layout_height="48dp"
        android:layout_marginStart="368dp"
        android:layout_marginLeft="368dp"
        android:layout_marginTop="220dp"
        android:text="REBOUNDS"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollPlayersView" />

    <TextView
        android:id="@+id/textViewSteals"
        android:layout_width="153dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="388dp"
        android:text="STEALS"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollPlayersView" />

    <TextView
        android:id="@+id/minuteDisplay"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="29dp"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMinutes" />

    <TextView
        android:id="@+id/pointsDisplay"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPoints" />

    <TextView
        android:id="@+id/assistsDisplay"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="25dp"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAssists" />

    <TextView
        android:id="@+id/reboundsDisplay"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRebounds" />

    <TextView
        android:id="@+id/stealsDisplay"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="34dp"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSteals" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="386dp"
        android:layout_height="93dp"
        android:fontFamily="sans-serif-medium"
        android:text="PLAYERS"
        android:textSize="72sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="11dp" />

</androidx.constraintlayout.widget.ConstraintLayout>